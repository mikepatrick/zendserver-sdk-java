java_cmd="java"

# Mac OS X needs an additional arg, or you get an "illegal thread" complaint.
if [ `uname` = "Darwin" ]; then
    os_opts="-XstartOnFirstThread"
else
    os_opts=
fi

if [ `uname` = "Linux" ]; then
    export GDK_NATIVE_WINDOWS=true
fi

if [ "$OSTYPE" = "cygwin" ] ; then
    jarpath=`cygpath -w  "$frameworkdir/$jarfile"`
    progdir=`cygpath -w  "$progdir"`
else
    jarpath="$frameworkdir/$jarfile"
fi

prog=`dirname "$0"`

#Get path to lib folder which consists all required jars
libpath="${prog}/../lib/*"

if [ $1 = "update" -a $# = 1 ] ; then
exec "$java_cmd" -Xmx256M $os_opts -classpath "$jarpath:$libpath:${prog}/../bin" org.zend.sdkcli.update.Update "${prog}/../"
else
exec "$java_cmd" -Xmx256M $os_opts -classpath "$jarpath:$libpath:${prog}/../bin" org.zend.sdkcli.Main "$@"
fi