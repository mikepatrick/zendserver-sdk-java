<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="testingSectionContribution" name="Testing Section Contribution" schema="schema/testingSectionContribution.exsd"/>

   <extension
         point="org.eclipse.ui.editors">
      <editor
      		default="true"
            class="org.zend.php.zendserver.deployment.ui.editors.DeploymentDescriptorEditor"
            contributorClass="org.zend.php.zendserver.deployment.ui.editors.DeploymentDescriptorEditorContributor"
            filenames="deployment.xml"
            icon="icons/obj16/application_obj.gif"
            id="org.zend.php.zendserver.deployment.ui.editors.DeploymentDescriptorEditor"
            name="%editor.name">
         <contentTypeBinding
               contentTypeId="org.zend.php.zendserver.deployment.ui.deploymentDescriptor">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.zend.php.zendserver.deployment.ui.configureNature"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.zend.php.zendserver.deployment.ui.targetsview?after=popupGroup1">
         <command
               commandId="org.zend.php.zendserver.deployment.ui.openTarget"
               label="%command.label"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.zend.php.zendserver.deployment.ui.targetsview?after=popupGroup2">
         <command
               commandId="org.zend.php.zendserver.deployment.ui.removeLaunchConfig"
               label="%command.label.0"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.zend.php.zendserver.deployment.ui.uninstallApplication"
               label="%command.label.1"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.EnableDeploymentSupport"
            description="%command.description"
            id="org.zend.php.zendserver.deployment.ui.configureNature"
            name="%command.name">
      </command>
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.ApplicationTestHandler"
            id="org.zend.php.zendserver.deployment.ui.phpunit"
            name="%command.name.0">
      </command>
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.RemoveLaunchOrTarget"
            id="org.zend.php.zendserver.deployment.ui.removeLaunchConfig"
            name="%command.name.1">
      </command>
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.OpenTargetCommand"
            id="org.zend.php.zendserver.deployment.ui.openTarget"
            name="%command.name.2">
      </command>
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.UninstallApplicationHandler"
            id="org.zend.php.zendserver.deployment.ui.uninstallApplication"
            name="%command.name.3">
      </command>
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.OpenCodeTracingCommand"
            id="org.zend.php.zendserver.deployment.ui.OpenCodeTracingSnapshot"
            name="%command.name.4">
      </command>
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.EnableTargetMonitorHandler"
            id="org.zend.php.zendserver.deployment.ui.enableTargetMonitoring"
            name="%command.name.5">
      </command>
      <command
            defaultHandler="org.zend.php.zendserver.deployment.ui.commands.DisableTargetMonitorHandler"
            id="org.zend.php.zendserver.deployment.ui.disableTargetMonitoring"
            name="%command.name.6">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.zend.php.zendserver.deployment.ui.commands.DeployVisibilityTester"
            id="org.zend.php.zendserver.deployment.ui.deployVisibilityTester"
            namespace="propertyTester.deploy"
            properties="visible"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="org.zend.php.zendserver.deployment"
            name="%category.name">
      </category>
      <wizard
            category="org.zend.php.zendserver.deployment"
            class="org.zend.php.zendserver.deployment.ui.wizards.PackageExportWizard"
            icon="icons/obj16/application_obj.gif"
            id="org.zend.php.zendserver.deployment.ui.packageExportWizard"
            name="%wizard.name">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-names="deployment.xml"
            id="org.zend.php.zendserver.deployment.ui.deploymentDescriptor"
            name="%content-type.name"
            priority="high">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber">
            <parameter
                  name="element"
                  value="package">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.zend.php.zendserver.deployment.ui.category"
            class="org.zend.php.zendserver.deployment.ui.views.TargetsViewPart"
            icon="icons/eview16/servers_view.gif"
            id="org.zend.php.zendserver.deployment.ui.targetsview"
            name="%view.name"
            restorable="true">
      </view>
      <category
            id="org.zend.php.zendserver.deployment.ui.category"
            name="%category.name.0">
      </category>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.zend.php.zendserver.deployment.ui.DeploymentUIPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.zend.php.zendserver.deployment.ui.Activator"></startup>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.php.perspective">
         <viewShortcut
               id="org.zend.php.zendserver.deployment.ui.targetsview">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.php.perspective">
         <view
               id="org.zend.php.zendserver.deployment.ui.targetsview"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ProblemView"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.zend.php.zendserver.deployment.ui.preferences.OpenShiftPreferencesPage"
            id="org.zend.php.zendserver.deployment.ui.OpenShiftPreferences"
            name="%page.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.zend.php.zendserver.deployment.ui.preferences.OpenShiftPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.zend.php.ui.welcomeLinkListener">
      <listener
            class="org.zend.php.zendserver.deployment.ui.actions.LaunchTargetWizard"
            id="org.zend.php.zendserver.deployment.ui.actions.LaunchTargetWizard.listener"
            name="target">
      </listener>
   </extension>
 <extension
         id="com.zend.php.platform.ui.platformWizardFragment"
         name="Deployment"
         point="org.eclipse.php.ui.wizardAndCompositeFragments">
      <wizardAndCompositeFragment
            class="org.zend.php.zendserver.deployment.ui.preferences.DeploymentFragmentFactory"
            fragmentsGroupID="org.eclipse.php.server.ui.serverWizardAndComposite"
            id="org.zend.php.zendserver.deployment.ui.deploymentFragmentFactory"
            name="Deployment Wizard Fragment"
            placeAfter="org.eclipse.php.internal.server.ui.PathMapperFragmentFactory"/>
   </extension>
 <extension
       point="org.eclipse.php.server.ui.serverTypes">
    <type
          class="org.zend.php.zendserver.deployment.ui.zendserver.LocalZendServerType"
          id="org.zend.php.zendserver.deployment.ui.zendserver.LocalZendServerType">
       <settings>
               <fragment
               id="org.eclipse.php.server.ui.wizard.BasicCompositeFragmentFactory">
	         </fragment>
	            <fragment id="org.zend.php.zendserver.deployment.ui.deploymentFragmentFactory">
	            </fragment>
	            <fragment
	                  id="com.zend.php.debug.internal.ui.tunneling.TunnelingFragmentFactory">
	            </fragment>
	            <fragment
	                  id="org.zend.php.zendserver.monitor.ui.preferences.monitoringFragmentFactory">
	            </fragment>
	            <fragment
	                  id="org.zend.php.zendserver.deployment.debug.ui.preferences.DebugModeFragmentFactory">
	            </fragment>
	            <fragment
	                  id="com.zend.php.remoteproject.ui.preferences.AutomaticUploadFragmentFactory">
	            </fragment>
	       </settings>
         <wizard>
            <fragment
                  id="org.zend.php.zendserver.deployment.ui.zendserver.LocalZendServerFragmentFactory">
            </fragment>
         </wizard>
    </type>
 </extension>
 <extension
         point="org.eclipse.php.ui.wizardAndCompositeFragments">
      <wizardAndCompositeFragment
            class="org.zend.php.zendserver.deployment.ui.zendserver.LocalZendServerFragmentFactory"
            fragmentsGroupID="org.eclipse.php.server.ui.serverWizardAndComposite"
            id="org.zend.php.zendserver.deployment.ui.zendserver.LocalZendServerFragmentFactory"
            name="Local Zend Server Fragment">
      </wizardAndCompositeFragment>
   </extension>
</plugin>
