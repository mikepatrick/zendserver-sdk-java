<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="codeTracingEditor" name="Code Tracing Editor" schema="schema/codeTracingEditor.exsd"/>
   <extension
         point="org.zend.php.zendserver.monitor.core.notificationProvider">
      <notificationProvider
            class="org.zend.php.zendserver.monitor.internal.ui.NotificationProvider">
      </notificationProvider>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.php.ui.preferences.PHPBasePreferencePage"
            class="org.zend.php.zendserver.monitor.ui.preferences.MonitoringPreferencePage"
            id="org.zend.php.zendserver.monitor.ui.targetsMonitoring"
            name="Application Monitoring">
      </page>
   </extension>
<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.zend.php.zendserver.deployment.ui.targetsview?after=popupGroup1">
         <command
               commandId="org.zend.php.zendserver.monitor.ui.startMonitoring"
               label="Start Application Monitoring"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <test
                     forcePluginActivation="true"
                     property="propertyTester.targetMonitor.visible"
                     value="false">
               </test>
            </visibleWhen>
         </command>
         <command
               commandId="org.zend.php.zendserver.monitor.ui.stopMonitoring"
               label="Stop Application Monitoring"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <test
                     forcePluginActivation="true"
                     property="propertyTester.targetMonitor.visible"
                     value="true">
               </test>
            </visibleWhen>
         </command>
         <command
               commandId="org.zend.php.zendserver.monitor.ui.monitoringPreferences"
               label="Application Monitoring Preferences..."
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <test
                        forcePluginActivation="true"
                        property="propertyTester.monitoringPreferences.visible"
                        value="true">
                  </test>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
<extension
      point="org.eclipse.core.expressions.propertyTesters">
   <propertyTester
         class="org.zend.php.zendserver.monitor.internal.ui.commands.MonitoringPrefsPropertyTester"
         id="org.zend.php.zendserver.monitor.ui.monitoringPreferencesTester"
         namespace="propertyTester.monitoringPreferences"
         properties="visible"
         type="java.lang.Object">
   </propertyTester>
   <propertyTester
         class="org.zend.php.zendserver.monitor.internal.ui.commands.MonitorStateTester"
         id="org.zend.php.zendserver.monitor.ui.MonitorStateTester"
         namespace="propertyTester.targetMonitor"
         properties="visible"
         type="java.lang.Object">
   </propertyTester>
</extension>
<extension
      point="org.eclipse.ui.commands">
   <command
         defaultHandler="org.zend.php.zendserver.monitor.internal.ui.commands.StartMonitorHandler"
         id="org.zend.php.zendserver.monitor.ui.startMonitoring"
         name="Start Application Monitoring">
   </command>
   <command
         defaultHandler="org.zend.php.zendserver.monitor.internal.ui.commands.StopMonitorHandler"
         id="org.zend.php.zendserver.monitor.ui.stopMonitoring"
         name="Stop Application Monitoring">
   </command>
   <command
         defaultHandler="org.zend.php.zendserver.monitor.internal.ui.commands.MonitoringPreferencesHandler"
         id="org.zend.php.zendserver.monitor.ui.monitoringPreferences"
         name="Monitoring Preferences...">
   </command>
</extension>
</plugin>
