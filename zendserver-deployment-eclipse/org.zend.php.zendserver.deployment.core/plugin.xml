<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.zend.php.zendserver.deployment.core.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         id="DeploymentNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.zend.php.zendserver.deployment.core.DeploymentNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="DeploymentBuilder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="false"
            hasNature="false"
            isConfigurable="true"
            supportsConfigurations="false">
         <run
               class="org.zend.php.zendserver.deployment.core.IncrementalDeploymentBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="problemmarker"
         name="Deployment Descriptor Error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <attribute
            name="lineNumber">
      </attribute>
      <attribute
            name="charStart">
      </attribute>
      <attribute
            name="charEnd">
      </attribute>
      <attribute
            name="message">
      </attribute>
      <attribute
            name="priority">
      </attribute>
      <attribute
            name="severity">
      </attribute>
   </extension>

</plugin>
